<div class="row">
  <div class="col-sm-6 col-sm-offset-2">
    <h1> {{model.title}}</h1>
    <p>{{model.body}}</p>
    <p> by {{model.author}}</p>
    <p>Tags:<ul>
      {{#each model.tags as |tag|}}
        {{tag.text}},
      {{/each}}
    </ul></p>
    <button class="btn btn-danger" {{action 'delete' question}}>Delete this Question</button>
    {{update-question question=model update="update"}}
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-offset-2">
    <h3>Responses to {{model.title}}</h3>
      <ul>
        {{#each model.responses as |response|}}
          {{response-tile response=response destroyResponse="destroyResponse"}}
        {{/each}}
      </ul>
  </div>
</div>

{{new-response save2="save3" question=model}}
{{new-tag saveTag2="saveTag3" question=model}}
