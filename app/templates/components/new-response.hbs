{{#if addNewResponse}}
  <h1>New Response</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Name</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="content">Response</label>
          {{input value=content id="content"}}
        </div>
        <button class="btn btn-success"{{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-primary" {{action 'responseFormShow'}}>Add New Response</button>
{{/if}}
