{{#if updateResponseForm}}
  <h3>Update this response: {{response.title}}</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name</label>
        {{input class="form-control" value=author id="author" placeholder=response.author}}
      </div>

      <div class="form-group">
        <label for="content">Response</label>
        {{input class="form-control" value=content id="content" placeholder=response.content}}
      </div>

      <button class="btn btn-sm theme5" {{action 'update' response}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-sm theme5" {{action 'updateResponseForm'}}>Update Response</button>
{{/if}}
