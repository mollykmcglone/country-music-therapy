{{#if updateQuestionForm}}
  <h4>Update {{question.title}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=question.title}}
      </div>

      <div class="form-group">
        <label for="author">Name</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="body">Your Question</label>
        {{input value=body id="body" placeholder=question.body}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'updateQuestionForm'}}>Update this Request</button>
{{/if}}
