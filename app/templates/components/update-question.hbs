{{#if updateQuestionForm}}
  <h3>Update {{question.title}}</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Your Name:</label>
          {{input class="form-control" value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="title">Brief Title for Request:</label>
        {{input class="form-control" value=title id="title" placeholder=question.title}}
      </div>

      <div class="form-group">
        <label for="body">Request Details:</label>
        {{input class="form-control" value=body id="body" placeholder=question.body}}
      </div>

      <button class="btn theme5" {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <div class="col-sm-3 col-sm-offset-3">
    <button class="btn btn-block theme" {{action 'delete' question}}>Delete Request</button>
  </div>
  <div class="col-sm-3">
    <button class="btn btn-block theme3" {{action 'updateQuestionForm'}}>Update Request</button>
  </div>
{{/if}}
