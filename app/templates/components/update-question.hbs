{{#if updateQuestionForm}}
  <h3>Update {{question.title}}</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input class="form-control" value=title id="title" placeholder=question.title}}
      </div>

      <div class="form-group">
        <label for="author">Name</label>
        {{input class="form-control" value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="body">Your Question</label>
        {{input class="form-control" value=body id="body" placeholder=question.body}}
      </div>

      <button class="btn btn-success" {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <div class="col-sm-6">
    <button class="btn btn-block btn-primary" {{action 'updateQuestionForm'}}>Update Request</button>
  </div>
{{/if}}
